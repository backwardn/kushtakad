<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Endpoints</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <div class="btn-group mr-2">

            <button data-toggle="modal" data-target="#exampleModal" class="btn btn-sm btn-outline-secondary">
                Create
            </button>

            <!-- Modal -->
            <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
                aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Create Endpoint</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <form>
                                <div class="form-group">
                                    <label for="uri">IP or DNS</label>
                                    <input type="uri" class="form-control" id="uri" aria-describedby="uriHelp"
                                        placeholder="Enter the IP address or DNS entry for the endpoint">
                                    <small id="uriHelp" class="form-text text-muted">We'll never share your email with
                                        anyone else.</small>
                                </div>
                            </form>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            <button type="button" id="createIpOrDns" class="btn btn-primary"
                                onclick="create()">Create</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="flex-container">
    {{ if len .Endpoints }}
    {{ range $key, $e := .Endpoints }}
    <div class="flex-item">
        <a href="/mod/endpoint/{{ $e.ID}}">{{ $e.URI}}</a>
    </div>
    {{ end }}
    {{ end }}
</div>


<script>




    function create() {

        let uri = document.getElementById(`uri`).value;
        let data = {
            "uri": uri
        }

        let url = "{{ .URI }}/mod/endpoint"
        // Default options are marked with *
        return fetch(url, {
            method: "POST", // *GET, POST, PUT, DELETE, etc.
            headers: {
                'Accept': 'application/json',
                'Content-Type': 'application/json'
            },
            mode: "cors", // no-cors, cors, *same-origin
            cache: "no-cache", // *default, no-cache, reload, force-cache, only-if-cached
            credentials: "omit", // include, *same-origin, omit
            redirect: "follow", // manual, *follow, error
            body: JSON.stringify(data)
        })
            .then(response => response.json())
    }

</script>
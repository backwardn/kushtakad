<div class="row">
    <form class="col s12" method="post" action="/login">
        <div class="row">
            <h5 class="col s12 m10 13">Login</h5>
        </div>
        <div class="row">
            <div class="input-field col s12 m10 13">
                <input id="email" type="email" name="email" value="{{ .Forms.Login.Email }}" required class="validate">
                <label for="email" data-error="example: potus@whitehouse.gov" data-success="valid">Email</label>
            </div>
            <div class="input-field col s12 m10 13">
                <input id="password" type="password" name="password" required class="validate" length="120"
                    pattern=".{12,}">
                <label for="password" data-error="required: 12 characters" data-success="valid">Password</label>
            </div>
        </div>

        <div class="row">
            <div class="col s12 m10 13">
                <button class="waves-effect waves-light teal lighten-1 btn">Submit</button>
            </div>
        </div>

    </form>
</div>